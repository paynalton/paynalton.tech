---
const { title, image } = Astro.props;
---
<div class="col card">
	<div class="card-header">
		<h2>{ title }</h2>
	</div>
	<div class="card-body row">
		<div class="col-md-2 col-sm-12">
			<img src={ image } alt={ title } class="img-fluid" />
		</div>
		<div class="col-md-10 col-sm-12">
			<p>
				<slot />
			</p>
		</div>
	</div>
</div>
<style>
	.card {
		margin: 1em 0;
	}
	.card-header {
		padding: 1em;
		border-bottom: 1px solid #dee2e6;
	}
	.card-body {
		padding: 1em;
	}
	.card-body img {
		max-width: 100%;
		height: auto;
	}
</style>