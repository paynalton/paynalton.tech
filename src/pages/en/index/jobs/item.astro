---
const { title, description, link, image, cargo, fecha } = Astro.props;
---
<div class="col-md-4 col-sm-6">
    <div class="single-blog-item">
        <div class="single-blog-item-img">
            <a href={ link } target="_blank"><img src={ image } alt="blog image"></a>
        </div>
        <div class="single-blog-item-txt">
            <h2><a href={ link } target="_blank">{ title }</a></h2>
            <h4><span>{ cargo }</span> { fecha }</h4>
            <p>
                { description }
            </p>
        </div>
    </div>
</div>