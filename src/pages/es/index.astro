---
import Skills from './index/skills.astro';
import Profile from './index/profile.astro';
import Menu from './index/menu.astro';
import Softskills from './index/softskills.astro';
import Jobs from './index/jobs.astro';
import Layout from '../../layouts/Default.astro';
---

<Layout
	title="Paynalton | Desarrollador web fullstack con enfoque innovador"
	description="Con más de 30 años de experiencia, Paynalton ofrece soluciones de desarrollo web innovadoras, eficientes y escalables."
	keywords="Paynalton, desarrollo web, programador fullstack, experiencia, innovación, soluciones digitales"
	currentPage="home"
	lang="es"
	slogan="Liderazgo, código y soluciones que perduran."
	subslogan="Desde los primeros lenguajes hasta las arquitecturas modernas, mi misión ha sido siempre la misma: convertir lo complejo en funcional, y lo funcional en extraordinario."
>

	<section id="list-topics" class="list-topics">
		<div class="container">
			<Menu/>
		</div>
	</section>
	<section id=""  class="subscription">
		<div class="container">
			<Profile/>
		</div>
	</section>
	<section id="works" class="works">
		<div class="container">
			<Skills/>
		</div>
	</section>
	<section id="explore" class="explore">
		<div class="container">
			<Softskills/>
		</div>
	</section>
	<section id="blog" class="blog" >
		<div class="container">
			<Jobs/>
		</div>
	</section>
</Layout>
